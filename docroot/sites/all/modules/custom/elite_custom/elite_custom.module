function elite_custom_poll_cancel($form, &$form_state) {
	$nid = $form['#nid'];
  $node = node_load($nid);
	//watchdog('vote CANC', 'for node <pre>'. print_r($node,true) .'</pre>');
	if ( isset( $node->field_base_points ) ) {
		if ( isset( $node->field_base_points['und'] ) ) {
